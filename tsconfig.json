{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "allowJs": false,
        "allowUmdGlobalAccess": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./server/@types"],
        "lib": ["dom", "es2021"],
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "paths": {
            "@Services": ["src/Services"],
            "@Services/*": ["src/Services/*"],
            "@Static/*": ["public/static/*"],
            "@assets/*": ["src/assets/*"],
            "@contexts/*": ["src/contexts/*"],
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@redux/*": ["src/@redux/*"],
            "@redux": ["src/@redux"],
            "@@types": ["src/@types"],
            "@data": ["src/data"],
            "@data/*": ["src/data/*"],
            "@hooks": ["src/hooks"],
            "@hooks/*": ["src/hooks/*"]
        }
    },
    "exclude": [
        "dist",
        ".next",
        "out",
        "node_modules",
        "next.config.js",
        "postcss.config.js",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "coverage"
    ],
    "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "server", "test"]
}
